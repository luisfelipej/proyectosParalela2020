{
  "editor.formatOnSave": false,
  "javascript.format.enable": false,
  "eslint.enable": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.alwaysShowStatus": true,
  "eslint.options": {
    "extensions": [
      ".html",
      ".js",
      ".jsx"
    ]
  },
  "eslint.validate": [
    "html",
    "vue",
    "javascript",
    "javascriptreact"
  ],
}